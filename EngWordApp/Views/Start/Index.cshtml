@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kelime Uygulaması</title>
    <style>
        @@media (max-width: 600px) {
            .container {
                padding: 60px 40px;
            }

            h1 {
                font-size: 2.5rem;
            }

            .btn {
                min-width: 250px;
                padding: 18px 50px;
                font-size: 1.3rem;
            }
        }
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f5f5f5;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            padding: 80px 60px;
            text-align: center;
            max-width: 600px;
            width: 100%;
        }

        .logo {
            font-size: 4rem;
            margin-bottom: 20px;
            color: #333;
        }

        h1 {
            color: #333;
            font-size: 3rem;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .subtitle {
            color: #666;
            font-size: 1.2rem;
            margin-bottom: 60px;
            line-height: 1.6;
        }

        .buttons-container {
            display: flex;
            flex-direction: column;
            gap: 20px;
            align-items: center;
        }

        .btn {
            padding: 20px 60px;
            font-size: 1.4rem;
            font-weight: 600;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            min-width: 280px;
            transition: all 0.3s ease;
            margin: 15px 0;
        }

        .btn-primary {
            background: #007bff;
            color: white;
        }

            .btn-primary:hover {
                background: #0056b3;
                transform: translateY(-2px);
            }

        .btn-secondary {
            background: #6c757d;
            color: white;
        }

            .btn-secondary:hover {
                background: #545b62;
                transform: translateY(-2px);
            }

        .btn:active {
            transform: translateY(-1px);
        }

        

        h1 {
            font-size: 2.5rem;
        }

        .btn {
            min-width: 250px;
            padding: 18px 50px;
            font-size: 1.3rem;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="logo">📚</div>
        <h1>Kelime Uygulaması</h1>
        <p class="subtitle">Kelime dağarcığınızı geliştirin ve öğrenme yolculuğunuza başlayın</p>

        <div class="buttons-container">
            <a href="/Default/TakeFilter" class="btn btn-primary">Başla</a>
            <a href="/AddNewList/ImportWords" class="btn btn-secondary">Kelime Kayıt Et</a>
        </div>
    </div>

    <script>
        // Sayfa yüklendiğinde basit fade-in efekti
        document.addEventListener('DOMContentLoaded', function() {
            const container = document.querySelector('.container');
            container.style.opacity = '0';

            setTimeout(() => {
                container.style.transition = 'opacity 0.5s ease-in';
                container.style.opacity = '1';
            }, 100);
        });
    </script>
</body>
</html>